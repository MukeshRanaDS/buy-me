<%- include('partials/header') %>

    <div class="row">
      <div class="PageTitle">
        <h2>Low Availability</h2>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th scope="col">Item ID </th>
          <th scope="col">Item Name and Specification</th>
          <th scope="col">Current Balance</th>
          <th scope="col">average Usage/Year</th>

        </tr>
      </thead>
      <tbody>
        <% availList.forEach(lowavailabilities => {%>
            <tr>
                <td><%= lowavailabilities.itemID %></td>
                <td><%= lowavailabilities.itemName %></td>
                <td style="text-align:center"><%= lowavailabilities.currBalance %></td>
                <td style="text-align:center"><%= lowavailabilities.averageUsePerYear %></td>
            </tr>
        <%})%>
      </tbody>
    </table>


    <%- include('partials/footer') %>
