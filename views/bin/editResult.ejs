<%- include('partials/header') %>
<div class="row">
  <div class="PageTitle">
    <h2>Part Manager</h2>
  </div>
</div>
<!-- ------------------------------------------------------ -->
<div class="container">
  <div>
    <div class="col-md-12">

      <form action="/search" method="post">
        <div>
          <div class="form-group">
            <label for="name" class="control-label">Filter By Name :</label>
            <input type="text" class="control-label" placeholder="Search.." name="fltrID">
            <button type="submit"><i class="fa fa-search"></i></button>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>

<!-- ------------------------------------------------------ -->

<div class="container">
  <div class="search-card">
    <div class="card-body">

      <form action="/" method="post">
        <div class="form-group">
          <div class="column">
            <div class="row">
              <label for="itemID">Part ID</label>
              <input type="text" class="form-control col-lg-9" id="itemID" name="itemID" placeholder="Enter Part ID" name="itemID"><br><br>
              <label for="partName">Part Name</label>
              <input type="text" class="form-control col-lg-9" id="partName" name="partName" placeholder="Enter Part Name" name="partName"><br><br>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="column">
            <div class="row">
              <label for="manufacturerName">Manufacturer Name</label>
              <input type="text" class="form-control col-lg-9" id="manufacturerName" name="manuName" placeholder="Enter Manufacturer Name" name="manufacturerName"><br><br>
              <label for="quantity">Quantity</label>
              <input type="text" class="form-control col-lg-9" id="quantity" name="quantity" placeholder="Enter Quantity" name="quantity"><br><br>
            </div>
          </div>
        </div>
        <input type="submit"  value="Submit" class="btn btn-primary">
      </form>

    </div>
  </div>
</div>

<div class="container">
  <div class="table-result">
    <table>
      <thead>
        <tr>
          <th style="width:10%" scope="col">Item ID </th>
          <th style="width:20%" scope="col">Item Name </th>
          <th style="width:15%" scope="col">Item Manufacturer </th>
          <th style="width:10%" scope="col">Current Balance</th>
          <th style="width:10%" scope="col">Action</th>

        </tr>
      </thead>
      <tbody>
        <% if (searchList.length >0){ %>
          <% searchList.forEach(function(row){ %>
          <tr>
            <td><%= row.itemID %></td>
            <td><%= row.itemName %></td>
            <td><%= row.itemManufacturer %></td>
            <td style="text-align:center"><%= row.currBalance %></td>
            <td>
              <a class="btn btn-primary btn-xs" href="/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
              <a class="btn btn-secondary btn-xs" href="/delete/<%= row._id %>"><i class="fa fa-trash"></i></a>
            </td>
          </tr>
          <% })} else{ %>
          <tr>
            <td>No Record Found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') %>
